# Update Conda Environment
update -y -n base -c defaults conda
# Set Priority
config --set channel_priority flexible
# Create New Environment
create -y --name py37 python=3.7
# Install Conda Packages
install -y -n py37 pandas plotly matplotlib seaborn scikit-learn
# Install Plotting Packages using conda-forge
install -y -n py37 -c conda-forge altair vega folium
# Install TensorFlow Packages using conda-forge
install -y -n py37 -c conda-forge opencv tensorflow keras
# Install Watermark Packages using conda-forge
install -y -n py37 -c conda-forge gpxpy watermark
# Install PyTorch using pytorch
install -y -n py37 -c pytorch torchvision
